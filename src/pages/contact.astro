---
import Layout from '../layouts/Layout.astro';

let message = '';

if (Astro.request.method === 'POST') {
  const data = await Astro.request.formData();
  // In a real application, you would handle the form submission here
  message = 'Thank you for your message. We will get back to you soon!';
}
---

<Layout title="Contact - Chronosphere">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="bg-white rounded-lg shadow-md p-8">
      <h1 class="text-4xl font-serif font-bold mb-8">Contact Us</h1>

      {message && (
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-6">
          {message}
        </div>
      )}

      <form method="POST" class="space-y-6">
        <div>
          <label for="name" class="block text-sm font-medium text-primary-700">
            Name
          </label>
          <input
            type="text"
            name="name"
            id="name"
            required
            class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-primary-700">
            Email
          </label>
          <input
            type="email"
            name="email"
            id="email"
            required
            class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div>
          <label for="subject" class="block text-sm font-medium text-primary-700">
            Subject
          </label>
          <input
            type="text"
            name="subject"
            id="subject"
            required
            class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          />
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-primary-700">
            Message
          </label>
          <textarea
            name="message"
            id="message"
            rows="6"
            required
            class="mt-1 block w-full rounded-md border-primary-300 shadow-sm focus:border-primary-500 focus:ring-primary-500"
          ></textarea>
        </div>

        <div>
          <button
            type="submit"
            class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
          >
            Send Message
          </button>
        </div>
      </form>
    </div>
  </div>
</Layout>