      <div class="relative">
        <input 
          type="search" 
          placeholder="Search articles..." 
          class="w-64 px-4 py-2 rounded-full bg-primary-50 border border-primary-200 focus:outline-none focus:ring-2 focus:ring-primary-500"
        />
      </div>
      
      <div class="flex gap-6 items-center">
        <a href="/blog" class="text-primary-700 hover:text-primary-900">Blog</a>
        <a href="/categories" class="text-primary-700 hover:text-primary-900">Categories</a>
