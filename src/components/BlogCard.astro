---
interface Props {
  title: string;
  excerpt: string;
  date: Date;
  category: string;
  image: string;
  slug: string;
}

const { title, excerpt, date, category, image, slug } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<article class="bg-white rounded-lg shadow-md overflow-hidden">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <div class="text-sm text-primary-600 mb-2">
      {category} • {formattedDate}
    </div>
    <h3 class="text-xl font-bold mb-2">{title}</h3>
    <p class="text-primary-700 mb-4">{excerpt}</p>
    <a href={`/blog/${slug}`} class="text-primary-900 font-semibold hover:text-primary-700">
      Read more →
    </a>
  </div>
</article>